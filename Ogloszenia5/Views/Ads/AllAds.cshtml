@{
    ViewBag.Title = "Index";
}

<h2>My ads</h2>

<div class="row">
    <div class="col-md-4"><h3>Photo</h3></div>
    <div class="col-md-4"><h3>Name</h3></div>
    <div class="col-md-2"><h3>Price</h3></div>
    <div class="col-md-2"><h3>Options</h3></div>
</div>

@{
        foreach (var item in @Model)
        {
            string nazwa = item.Name;
            <div class="row">
                <hr />

                <div class="col-md-4">
                    <a href="/Ads/Edit/@item.Id">
                        <img src="~/images/@item.Url" height="168" width="300" />
                    </a>
                </div>
                <div class="col-md-4">
                    <h5>@Html.ActionLink(nazwa, "../Ads/Details", new { id = item.Id })</h5>
                </div>
                <div class="col-md-2">
                    <h5>@item.Price zł</h5>
                </div>

                @{ System.Diagnostics.Debug.WriteLine(User.Identity.Name);
                    <div class="col-md-2">
                        @Html.ActionLink("Edit", "Edit", "Ads", new { id = item.Id }, new { @class = "btn btn-default" })
                        @Html.ActionLink("Delete", "Delete", "Ads", new { id = item.Id }, new { @class = "btn btn-default" })
                    </div>
                }
            </div>

        }
}
