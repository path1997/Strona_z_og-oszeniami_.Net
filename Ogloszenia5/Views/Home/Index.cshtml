        <h1>JANUSZ OLX</h1>
        <p class="lead">Site for real bargain hunters</p>

        @*@Html.DisplayFor(modelItem => item.Ad.Name)*@
        <p>Choose category:</p>
        <div class="form-horizontal">
            <div class="form-group">
                <div class="col-md-10">
                    @Html.DropDownList("Id", null, htmlAttributes: new { @class = "form-control" })
