@model Ogloszenia5.Models.Rating

@{
    ViewBag.Title = "Edit";
}

<h2>Edit</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
<div class="form-horizontal">
    <h4>Rating</h4>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.Id)
    
<div class="form-group">
    <label class="control-label col-md-2" for="Mark">Mark</label>
    <div class="col-md-10">
        <input class="form-control text-box single-line" data-val="true" data-val-number="Pole Mark musi być liczbą." data-val-required="Pole Mark jest wymagane." id="Mark" name="Mark" type="number" value="@Model.Mark">
        <span class="field-validation-valid text-danger" data-valmsg-for="Mark" data-valmsg-replace="true"></span>
     </div>
</div>

    <div class="form-group">
        @Html.LabelFor(model => model.Comment, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            <textarea cols="50" htmlattributes="{ class = form-control }" id="Comment" name="Comment" rows="2">@Model.Comment</textarea>
            <input type="hidden" name="UserId" value="@ViewBag.userId" />
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Save" class="btn btn-default" />
        </div>
    </div>
</div>
}

<div>
    @Html.ActionLink("Back to Ad", "Details", "Ads", new { id = ViewBag.AdId }, new { @class = "btn btn-default" })
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
